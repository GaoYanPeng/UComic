<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/homeTen">

    <LinearLayout
       android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sing_pop_update"
            android:paddingTop="@dimen/homeTen"
            android:paddingBottom="@dimen/homeTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sing_update"/>

        <TextView
            android:id="@+id/sing_pop_ticket"
            android:paddingTop="@dimen/homeTen"
            android:paddingBottom="@dimen/homeTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sing_ticket"/>

        <TextView
            android:id="@+id/sing_pop_click"
            android:paddingTop="@dimen/homeTen"
            android:paddingBottom="@dimen/homeTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sing_click"/>

        <TextView
            android:id="@+id/sing_pop_young"
            android:paddingTop="@dimen/homeTen"
            android:paddingBottom="@dimen/homeTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sing_young"/>

        <TextView
            android:id="@+id/sing_pop_gril"
            android:paddingTop="@dimen/homeTen"
            android:paddingBottom="@dimen/homeTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sing_gril"/>


    </LinearLayout>

</RelativeLayout>