<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp">
        <ImageView
            android:id="@+id/search_recommended_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:background="@mipmap/toolbar_back_normal"/>

        <TextView
            android:id="@+id/Gridview_recommended_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"/>

    </RelativeLayout>
    <View
        android:background="#d0dcdf"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/recommended_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/recommended_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>