<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Top_up_title"
        android:layout_width="match_parent"
        android:layout_height="40sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:background="@mipmap/toolbar_back_pressed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Top_up_demon_money"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Prepaid_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Prepaid_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="@dimen/homeTen"
            android:text="@string/Prepaid_phone_number"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/One_thousand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_share"
                android:text="1000/10元"
                android:textColor="@color/colorButtonText"/>

            <Button
                android:id="@+id/Two_thousand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_share"
                android:text="2000/20元"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Five_thousand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_share"
                android:text="5000/50元"
                android:textColor="@color/colorButtonText"/>

            <Button
                android:id="@+id/Ten_thousand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_share"
                android:text="10000/100元"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Twenty_thousand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_share"
                android:text="20000/200元"
                android:textColor="@color/colorButtonText"/>

            <Button
                android:id="@+id/Fifty_thousand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_share"
                android:text="50000/500元"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/Top_up_segmentation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/homeThree"
        android:layout_marginTop="@dimen/homeTen"
        android:background="@color/colorLineAshYellow"/>

    <LinearLayout
        android:id="@+id/Choose_way"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="@dimen/homeTen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Please_select_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/homeTen"
                android:text="@string/Please_select_payment_method"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/WeChat_pay_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/homeTen"
                android:background="@mipmap/icon_wexin_pay"/>
            <TextView
                android:id="@+id/WeChat_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/WeChat_pay_imageview"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/homeTen"
                android:text="@string/WeChat_pay"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/homeTen"
                android:background="@mipmap/image_directory_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:id="@+id/WeChat_segmentation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/homeOne"
            android:background="@color/colorLineAsh"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/Pay_treasure_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/homeTen"
                android:background="@mipmap/icon_ali_pay"/>
            <TextView
                android:id="@+id/Pay_treasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Pay_treasure_imageview"
                android:layout_marginLeft="@dimen/homeTen"
                android:text="@string/Pay_treasure"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/homeTen"
                android:background="@mipmap/icon_vip_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Confirm_prepaid_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLineAshYellow">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_sure_share"
            android:text="@string/Confirm_prepaid_phone"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>