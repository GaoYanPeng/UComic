<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
            android:background="#FCFFF7"
              android:layout_height="match_parent"
              android:orientation="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--轮播图-->
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:background="#e0ffff"/>
        <!--轮播图下面的标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">
            <!--排名-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ranking_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_boutique_head_point_ranking"/>

                <TextView
                    android:textColor="#4b1212"
                    android:id="@+id/ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70sp"
                    android:text="@string/ranking"/>
            </RelativeLayout>
            <!--签约-->
            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/signing_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/icon_signed"/>

                <TextView
                    android:textColor="#4b1212"
                    android:id="@+id/signing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70sp"
                    android:text="@string/signing"/>
            </RelativeLayout>
            <!--专题-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/project_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_boutique_head_point_special"/>

                <TextView
                    android:textColor="#4b1212"
                    android:id="@+id/project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70sp"
                    android:text="@string/project"/>
            </RelativeLayout>
            <!--动画-->
            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/animation_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_boutique_head_point_animation"/>

                <TextView
                    android:textColor="#4b1212"
                    android:id="@+id/animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70sp"
                    android:text="@string/animation"/>
            </RelativeLayout>
        </LinearLayout>
        <!--强力推荐-->
        <!--强力推荐 上层标题栏-->
        <TextView
            android:background="#dfdfdf"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>

</ScrollView>